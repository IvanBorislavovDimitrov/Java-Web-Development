<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">


    <url-mapping id="index">
        <pattern value="/"/>
        <view-id value="/jsf/index.xhtml"/>
    </url-mapping>

    <url-mapping id="user-login">
        <pattern value="/login"/>
        <view-id value="/jsf/login.xhtml"/>
    </url-mapping>

    <url-mapping id="user-register">
        <pattern value="/register"/>
        <view-id value="/jsf/register.xhtml"/>
    </url-mapping>

    <url-mapping id="user-view">
        <pattern value="/home"/>
        <view-id value="/jsf/home.xhtml"/>
    </url-mapping>

    <url-mapping id="create-schedule">
        <pattern value="/schedules/create"/>
        <view-id value="/jsf/create-schedule.xhtml"/>
    </url-mapping>

    <url-mapping id="create-schedule">
        <pattern value="/schedules/details"/>
        <view-id value="/jsf/details-schedule.xhtml"/>
    </url-mapping>

    <url-mapping id="create-schedule">
        <pattern value="/schedules/print"/>
        <view-id value="/jsf/print-schedule.xhtml"/>
    </url-mapping>

</pretty-config>