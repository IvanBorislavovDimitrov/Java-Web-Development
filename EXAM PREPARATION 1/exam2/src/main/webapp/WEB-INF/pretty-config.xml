<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">


    <url-mapping id="index">
        <pattern value="/"/>
        <view-id value="/jsf/index.xhtml"/>
    </url-mapping>

    <url-mapping id="user-login">
        <pattern value="/login"/>
        <view-id value="/jsf/login.xhtml"/>
    </url-mapping>

    <url-mapping id="user-register">
        <pattern value="/register"/>
        <view-id value="/jsf/register.xhtml"/>
    </url-mapping>

    <url-mapping id="user-view">
        <pattern value="/home"/>
        <view-id value="/jsf/home.xhtml"/>
    </url-mapping>

    <url-mapping id="add-job">
        <pattern value="/jobs/add"/>
        <view-id value="/jsf/add-job.xhtml"/>
    </url-mapping>

    <url-mapping id="add-job">
        <pattern value="/jobs/details"/>
        <view-id value="/jsf/job-details.xhtml"/>
    </url-mapping>

    <url-mapping id="delete-job">
        <pattern value="/jobs/delete"/>
        <view-id value="/jsf/job-delete.xhtml"/>
    </url-mapping>

    <url-mapping id="friends">
        <pattern value="/friends"/>
        <view-id value="/jsf/friends.xhtml"/>
    </url-mapping>

    <url-mapping id="profile">
        <pattern value="/profile"/>
        <view-id value="/jsf/profile.xhtml"/>
    </url-mapping>

    <url-mapping id="friend-profile">
        <pattern value="/friend-profile"/>
        <view-id value="/jsf/friend-profile.xhtml"/>
    </url-mapping>

</pretty-config>